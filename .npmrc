# Route through local proxy if available; falls back cleanly when env vars are unset
proxy=${HTTP_PROXY}
https-proxy=${HTTPS_PROXY}

# Use a public mirror to avoid 403 responses from the default registry in restricted environments
registry=https://registry.npmmirror.com/
@skeletonlabs:registry=https://registry.npmmirror.com/

# Accept the MITM certificate injected by the sandbox proxy
strict-ssl=false
